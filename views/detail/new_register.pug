                                    option 21
                                    option 22
                                    option 23
                                    option 24
                                    option 25
                                    option 26
                                    option 27
                                    option 28
                                    option 29
                                    option 30
                                    option 31

                tr
                    .form-group
                        th(scope='row') 자산 설명
                        td(colspan='3')
                            textarea.form-control(id='description' name='description' rows='7' placeholder='자산에 대한 설명을 입력해 주세요')
                
                tr
                    .form-group
                        th(scope='row') 청산 일시
                        td(colspan='3')
                            .row
                                select.form-control.col-4(id='endYear' name='endYear')
                                    option 2020
                                    option 2021
                                    option 2022
                                    option 2023
                                    option 2024
                                    option 2025
                                select.form-control.col-3(id='endMonth' name='endMonth')
                                    option 1
                                    option 2
                                    option 3
                                    option 4
                                    option 5
                                    option 6
                                    option 7
                                    option 8
                                    option 9
                                    option 10
                                    option 11
                                    option 12
                                select.form-control.col-3(id='endDay' name='endDay')
                                    option 1
                                    option 2
                                    option 3
                                    option 4
                                    option 5
                                    option 6
                                    option 7
                                    option 8
                                    option 9
                                    option 10
                                    option 11
                                    option 12
                                    option 13
                                    option 14
                                    option 15
                
                tr
                    .form-group
                        th(scope='row') 사진 등록
                        td(scope='row')
                            input.form-control-file(type='file' id='photo')
                    .form-group
                        td(colspan='2')
                            button.btn.btn-dark(type='submit') 자산 등록
                


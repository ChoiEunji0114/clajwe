form(action='../investments/request_invest' method='POST')
    table.table.table-bordered.detail
        tbody
            tr
                th.detail(rowspan='2') 가치
                td(scope='row') 코인 #{invest.value}
            tr  
                td(scope='row') 현금 #{invest.value} 원 
            tr
                th.detail(scope='row') 현재 투자 인원
                td(scope='row') #{invest.invest_person_num} 명 
            tr 
                th.detail(scope='row') 투자 총액
                td(scope='row') #{invest.invest_sum} 원 
            tr
                th.detail(scope='row') 남은 투자 금액 
                td(scope='row') #{invest.invest_left} 원
            tr
                th.detail(scope='row') 원하는 투자 금액
                td(scope='row') 
                    input.form-control(type='text' id='investValue' name='investValue' placeholder='투자금액')
            tr
                td.button(colspan='2')
                    if (isM)
                        button.btn.btn-dark(type='submit') 승인하기
                    else
                        button.btn.btn-dark(type='submit') 투자하기
